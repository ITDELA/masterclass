---
import { clsx } from "clsx";

import Img from "./components/Img.astro";
import List from "./components/List.astro";

const { isDark, include } = Astro.props;
const { title, btn, includes, img, alt } = include;
---

<section class={clsx("includes", isDark && "includes_dark")}>
  <div class="includes_container">
    {
      isDark && (
        <div class="includes_grid">
          <List includes={includes} isDark={isDark} title={title} btn={btn} />
          <Img img={img} alt={alt} />
        </div>
      )
    }
    {
      !isDark && (
        <div class="includes_grid">
          <Img img={img} alt={alt} />
          <List includes={includes} isDark={isDark} title={title} btn={btn} />
        </div>
      )
    }
  </div>
</section>
