---
const includes = [
  "Certificación profesional (impresa y digital)",
  "Guía de estudio + 25 protocolos paso a paso",
  "Práctica en vivo con kit + 1 caja de exosomas",
  "Desayuno y almuerzo incluidos",
  "Asesoría continua (grupo de soporte)",
  "Acceso a webinars semanales sin costo",
  "Descuentos exclusivos en insumos y actualizaciones",
];
---

<section class="bg-white py-16 md:py-24">
    <div class="container mx-auto px-6">
    <div class="grid items-center gap-12 lg:grid-cols-2">
        {/* Image */}
        <div class="relative overflow-hidden rounded-lg shadow-lg">
            <video autoplay="" playsinline="" loop="" poster="" muted="" class="h-[320px] w-full object-cover md:h-[420px]" style="opacity:1;border-radius:-2px;" 
                src="https://storage.googleapis.com/msgsndr/j3f9dSoiNfjln4DzMW95/media/68c9f96a9fe3cfa7683b131a.mp4" 
            />
        </div>

        {/* Content */}
        <div>
        <h2 class="font-playfair text-3xl font-normal text-[#060606] md:text-4xl lg:text-5xl">
            ¿Qué incluye tu
            <br />
            Masterclass?
        </h2>

        <ul class="mt-8 space-y-4">
            {includes.map(item => (
            <li class="flex items-start gap-3">
                <svg
                class="mt-1 h-5 w-5 flex-shrink-0"
                viewBox="0 0 20 20"
                >
                    <circle r="10" cx="10" cy="10" fill="black" />
                    <path
                        fill-rule="evenodd"
                        d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                        clip-rule="evenodd"
                        fill="white"
                    />
                </svg>
                <span class="text-base text-[#060606] md:text-lg">{item}</span>
            </li>
            ))}
        </ul>

        <a
            href="#programa"
            class="mt-10 inline-block bg-[#060606] px-10 py-4 text-sm font-medium uppercase tracking-[0.2em] text-white transition-all duration-300 hover:bg-[#bfa792] rounded-sm"
        >
            Programa Educativo
        </a>
        </div>
    </div>
    </div>
</section>
