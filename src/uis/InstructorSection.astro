---
import { Image } from 'astro:assets';
import anderson from '../images/anderson.jpeg';

const includes = [
  "Certificación profesional (impresa y digital)",
  "Guía de estudio + 25 protocolos paso a paso",
  "Práctica en vivo con kit + 1 caja de exosomas",
  "Desayuno y almuerzo incluidos",
  "Asesoría continua (grupo de soporte)",
  "Acceso a webinars semanales sin costo",
  "Descuentos exclusivos en insumos y actualizaciones",
];
const title = "¿Qué incluye tu Masterclass?"
const btn = "Programa Educativo"
---

<section class="instructor">
    <div class="instructor_container">
    <div class="instructor_grid">
        <div class="instructor_media">
        <Image
            src={anderson}
            alt="Práctica de Masterclass"
            class="instructor_image"
        />
        </div>

        <div>
        <h2 class="instructor_title">{title}</h2>

        <ul class="instructor_list">
            {includes.map((item) => (
            <li class="instructor_item">
                <svg
                class="instructor_icon"
                viewBox="0 0 20 20"
                fill="currentColor"
                >
                <path
                    fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd"
                />
                </svg>
                <span class="instructor_text">{item}</span>
            </li>
            ))}
        </ul>

        <a
            href="#programa"
            class="instructor_btn"
        >
            {btn}
        </a>
        </div>
    </div>
    </div>
</section>