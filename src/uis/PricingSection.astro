<section class="bg-white py-16 md:py-24" id="programa">
    <div class="container mx-auto px-6">
    <h2 class="mb-12 text-center font-playfair text-4xl font-normal text-[#060606] md:text-5xl">
        Inversión
    </h2>

    <div class="mx-auto grid max-w-3xl gap-8 md:grid-cols-2">
        {/* Preventa */}
        <div class="group flex flex-col rounded-2xl bg-[#060606] p-8 text-center transition-all duration-300 hover:scale-105">
        <h3 class="text-lg font-medium uppercase tracking-[0.2em] text-white">
            Preventa
        </h3>

        <div class="my-6 font-playfair text-5xl font-bold text-white md:text-6xl">
            $750
        </div>

        <div class="flex items-center justify-center gap-2">
            <svg
            class="h-5 w-5 text-[#4b9ddb]"
            viewBox="0 0 20 20"
            fill="currentColor"
            >
            <path
                fill-rule="evenodd"
                d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                clip-rule="evenodd"
            />
            </svg>
            <span class="text-sm italic text-white/80">
            Reserva con 30%: $225.
            </span>
        </div>

        <a
            href="#inscribirme"
            class="mt-8 rounded-lg bg-white px-8 py-4 text-sm font-medium uppercase tracking-[0.15em] text-[#060606] transition-all duration-300 hover:bg-[#bfa792] hover:text-white"
        >
            Reservar Cupo
        </a>
        </div>

        {/* Día del Evento */}
        <div class="group flex flex-col rounded-2xl bg-[#060606] p-8 text-center transition-all duration-300 hover:scale-105">
        <h3 class="text-lg font-medium uppercase tracking-[0.2em] text-white">
            Dia del Evento
        </h3>

        <div class="my-6 font-playfair text-5xl font-bold text-white md:text-6xl">
            $850
        </div>

        <div class="flex items-center justify-center gap-2">
            <svg
            class="h-5 w-5 text-[#4b9ddb]"
            viewBox="0 0 20 20"
            fill="currentColor"
            >
            <path
                fill-rule="evenodd"
                d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                clip-rule="evenodd"
            />
            </svg>
            <span class="text-sm italic text-white/80">
            Pago completo.
            </span>
        </div>

        <a
            href="#inscribirme"
            class="mt-8 rounded-lg bg-white px-8 py-4 text-sm font-medium uppercase tracking-[0.15em] text-[#060606] transition-all duration-300 hover:bg-[#bfa792] hover:text-white"
        >
            Reservar Cupo
        </a>
        </div>
    </div>
    </div>
</section>