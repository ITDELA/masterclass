---
import type { Brand } from "../types";

import { Image } from "astro:assets";
import health from "../assets/health.png";

const { brand } = Astro.props;
const { brands, title } = brand;
---

<section class="brand">
  <div class="brand_container">
    <div class="brand_grid">
      <div class="brand_media">
        <Image src={health} alt="PrÃ¡ctica de Masterclass" class="brand_image" />
      </div>
      <div>
        <h2 class="brand_title">{title}</h2>
        <ul class="brand_list">
          {
            brands.map(({ title, text }: Brand) => (
              <li class="brand_item">
                <svg class="brand_icon" viewBox="0 0 20 20" fill="currentColor">
                  <path
                    fill-rule="evenodd"
                    clip-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                  />
                </svg>
                <div class="brand_text">
                  <strong>{title}</strong>
                  <p>{text}</p>
                </div>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </div>
</section>
