---
import { SplitText, BlurText } from "../components";
import "animate.css";

const { welcome } = Astro.props;
const { title, subtitle, text, btn } = welcome;
---

<section class="welcome">
  <div class="welcome_container">
    <!--
      <h1 class="welcome_aside-title">{title}</h1>
      -->  
      <BlurText
        text={title}
        delay={50}
        animateBy="words"
        direction="top"
        className="welcome_aside-title"
        client:load
      />
      <BlurText
        text={subtitle}
        delay={300}
        animateBy="words"
        direction="bottom"
        className="welcome_aside-subtitle"
        client:load
      />
      <SplitText
        text={text}
        className="welcome_aside-text"
        delay={150}
        duration={1.25}
        ease="power3.out"
        splitType="chars"
        from={{ opacity: 0, y: 40 }}
        to={{ opacity: 1, y: 0 }}
        threshold={0.1}
        rootMargin="-100px"
        client:load
      />
      <div class="pt-20">
        <a
          href="./assets/PROGRAMA-EDUCATIVO.pdf"
          target="_blank"
          rel="noopener"
          class="welcome_aside-btn animate__animated animate__pulse"
        >
          {btn}
        </a>
      </div>
  </div>
</section>
