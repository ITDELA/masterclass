---
import { Image } from "astro:assets";
import woman from "../assets/woman.jpeg";

const { instructor } = Astro.props;
const { instructors, title } = instructor
---

<section class="instructor">
  <div class="instructor_container">
    <div class="instructor_grid">
      <div>
        <h2 class="instructor_title">{title}</h2>
        <ul class="instructor_list">
          {
            instructors.map((item: string) => (
              <li class="instructor_item">
                <svg
                  class="instructor_icon"
                  viewBox="0 0 20 20"
                  fill="currentColor"
                >
                  <path
                    fill-rule="evenodd"
                    clip-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                  />
                </svg>
                <span class="instructor_text">{item}</span>
              </li>
            ))
          }
        </ul>
      </div>
      <div class="instructor_media">
        <Image
          src={woman}
          alt="PrÃ¡ctica de Masterclass"
          class="instructor_image"
        />
      </div>
    </div>
  </div>
</section>
