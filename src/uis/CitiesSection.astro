---
const cities = [
  {
    date: "03",
    month: "NOVIEMBRE",
    city: "MIAMI",
    venue: "InterContinental Hotel",
  },
  {
    date: "10",
    month: "NOVIEMBRE",
    city: "ORLANDO",
    venue: "Rosen Center Hotel",
  },
  {
    date: "11",
    month: "NOVIEMBRE",
    city: "CHARLOTTE",
    venue: "Omni Hotel",
  },
  {
    date: "23",
    month: "NOVIEMBRE",
    city: "NEW YORK",
    venue: "InterContinental Time Square",
  },
  {
    date: "24",
    month: "NOVIEMBRE",
    city: "BOSTON",
    venue: "InterContinental Boston (IHG)",
  },
];
---


<section class="bg-white py-16 md:py-24">
    <div class="container mx-auto px-6">
    <h2 class="mb-12 text-center font-playfair text-4xl font-normal text-[#060606] md:text-5xl">
        Elige tu ciudad
    </h2>

    <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-5">
        {cities.map((city) => (
        <div
            class="group flex flex-col rounded-md bg-[#060606] p-6 text-center transition-all duration-300 hover:scale-105 w-3xs"
        >
            <div class="mb-2 font-playfair text-4xl font-bold text-white md:text-5xl">
            {city.date}
            </div>
            <div class="mb-4 text-xl font-medium uppercase tracking-wider text-white">
            {city.month}
            </div>

            <div class="mb-1 text-md italic text-white">
            Masterclass Tour
            </div>
            <div class="mb-2 text-md font-bold italic text-white">
            {city.city}:
            </div>

            <div class="mb-6 text-md text-white/80">
            {city.venue}
            </div>

            <a
            href="#inscribirme"
            class="mt-auto rounded-lg bg-white px-6 py-3 text-xl font-medium text-[#060606] transition-all duration-300 hover:bg-[#bfa792] hover:text-white"
            >
            Inscribirme
            </a>
        </div>
        ))}
    </div>
    </div>
</section>