---
const contents = [
  {
    title: "Ciencia de Exosomas",
    description: "Vesículas, carga (Mirna/proteínas) vías PI3K/Akt, MAPK/ERK.",
  },
  {
    title: "Sinergia molecular",
    description: "Exosomas + PDRN + (rutas complementarias: vesicular, nuclear y mitocondrial).",
  },
  {
    title: "Exosomas + Peelings",
    description: "Selección de pH, capas y tiempos de aplicación.",
  },
];
const title = "Contenido exclusivo"
const subtitle = "Un evento basado en evidencia científica con enfoque práctico"
---

<section class="content">
    <div class="content_container">
    <div class="content_header">
        <h2 class="content_title">
        {title}
        </h2>
        <p class="content_subtitle">
        {subtitle}
        </p>
    </div>

    <div class="content_grid">
        {contents.map((content, index) => (
        <div class="content_item">
            <h3 class="content_item-title">
            {content.title}
            </h3>
            <p class="content_item-text">
            {content.description}
            </p>
        </div>
        ))}
    </div>
    </div>
</section>