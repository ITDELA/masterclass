---
const cities = ["MIAMI", "ORLANDO", "CHARLOTTE", "NEW YORK", "BOSTON"];
const title = "Asegura tu cupo"
const subtitle = "Asegura tu lugar hoy y entra al c√≠rculo de pioneros en exosomas."
const btn = "Reservar con 30%"
---

<section class="cta" id="inscribirme">
    <div class="cta_container">
    <div class="cta_card">
        <h2 class="cta_title">{title}</h2>

        <p class="cta_subtitle">{subtitle}</p>

        <div class="cta_btnWrap">
        <a
            href="#reservar"
            class="cta_btn"
        >
            {btn}
        </a>
        </div>

        <div class="cta_links">
        {cities.map((city) => (
            <a
            href={`#${city.toLowerCase().replace(" ", "-")}`}
            class="cta_link"
            >
            {city}
            </a>
        ))}
        </div>
    </div>
    </div>
</section>