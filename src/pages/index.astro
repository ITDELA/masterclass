---
import Layout from "../layout/main.astro";

import HeroSection from "../uis/HeroSection.astro";
import CitiesSection from "../uis/CitiesSection.astro";
import IncludesSection from "../uis/IncludesSection.astro";
import ContentSection from "../uis/ContentSection.astro";
import InstructorSection from "../uis/InstructorSection.astro";

import { en } from "../i18n";

const { title, lang, timeless, renewed, perfect } = en;
---

<Layout lang={lang} title={title}>
  <HeroSection lang={lang} />
  <CitiesSection lang={lang} />
  <IncludesSection lang={lang} include={timeless} isDark />
  <IncludesSection lang={lang} include={renewed} />
  <IncludesSection lang={lang} include={perfect} isDark />
  <InstructorSection lang={lang} />
  <ContentSection lang={lang} />
</Layout>

