---
import Layout from "../layout/main.astro";

import HeroSection from "../uis/HeroSection.astro";
import WelcomeSection from "../uis/WelcomeSection.astro";
import IncludesSection from "../uis/IncludesSection.astro";
import ContentSection from "../uis/ContentSection.astro";
import InstructorSection from "../uis/InstructorSection.astro";
import FinishSection from "../uis/FinishSection.astro";

import { en } from "../i18n";

const { renewed, perfect, instructor, content } = en;
const { title, lang, hero, welcome, timeless, footer } = en;
---

<Layout lang={lang} title={title} footer={footer}>
  <HeroSection lang={lang} hero={hero} />
  <WelcomeSection welcome={welcome} />
  <IncludesSection include={timeless} isDark />
  <IncludesSection include={renewed} />
  <IncludesSection include={perfect} isDark />
  <InstructorSection instructor={instructor} />
  <ContentSection content={content} />
  <FinishSection instructor={instructor} />
</Layout>
